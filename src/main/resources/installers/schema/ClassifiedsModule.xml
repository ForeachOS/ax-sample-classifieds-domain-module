<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="table.demo_category" value="demo_category"/>
    <property name="table.demo_classified" value="demo_classified"/>
    <property name="table.demo_seller" value="demo_seller"/>

    <include file="com/foreach/across/core/installers/AcrossSequencesInstaller.xml"/>

    <changeSet id="201406141719" author="arne" runAlways="true" dbms="oracle">
        <sql>
            ALTER session SET nls_length_semantics=CHAR;
        </sql>
    </changeSet>

    <changeSet id="201711021309" author="stg">
        <preConditions>
            <not>
                <tableExists tableName="${table.demo_category}"/>
            </not>
        </preConditions>

        <comment>Creates category table</comment>

        <createTable tableName="${table.demo_category}">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_demo_category"/>
            </column>
            <column name="name" type="java.sql.Types.NVARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="201711021316" author="stg">
        <preConditions>
            <not>
                <tableExists tableName="${table.demo_seller}"/>
            </not>
        </preConditions>

        <comment>Creates seller table</comment>

        <createTable tableName="${table.demo_seller}">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_demo_seller"/>
            </column>
            <column name="name" type="java.sql.Types.NVARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="gravatar_url" type="java.sql.Types.NVARCHAR(255)"/>
            <column name="email" type="java.sql.Types.NVARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="201711021320" author="stg">
        <preConditions>
            <not>
                <tableExists tableName="${table.demo_classified}"/>
            </not>
        </preConditions>

        <comment>Creates classifieds table</comment>

        <createTable tableName="${table.demo_classified}">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_demo_classified"/>
            </column>
            <column name="name" type="java.sql.Types.NVARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="java.sql.Types.CLOB"/>
            <column name="status" type="java.sql.Types.VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="available_after" type="java.sql.Types.DATETIME"/>
            <column name="price" type="java.sql.Types.DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="java.sql.Types.BIGINT">
                <constraints nullable="false" foreignKeyName="fk_demo_classified_category" referencedTableName="${table.demo_category}" referencedColumnNames="id"/>
            </column>
            <column name="seller_id" type="java.sql.Types.BIGINT">
                <constraints nullable="false" foreignKeyName="fk_demo_classified_seller" referencedTableName="${table.demo_seller}" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>